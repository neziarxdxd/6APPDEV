<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainGame">


    <TextView
        android:id="@+id/playerChoice"
        android:layout_width="260dp"
        android:layout_height="69dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="testing_choice"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/computerChoice"
        android:layout_width="232dp"
        android:layout_height="64dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="testing_computer"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.373" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="223dp"
        android:layout_height="66dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="tesing_view"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />


    <Button
        android:id="@+id/btnRock"
        android:layout_width="91dp"
        android:layout_height="67dp"
        android:onClick="clickRock"
        android:text="rock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPaper"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerChoice"
        app:layout_constraintVertical_bias="0.496" />

    <Button
        android:id="@+id/btnPaper"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:onClick="clickPaper"
        android:text="paper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnScissors"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnRock"
        app:layout_constraintTop_toBottomOf="@+id/playerChoice"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/btnScissors"
        android:layout_width="86dp"
        android:layout_height="70dp"
        android:onClick="clickScissors"
        android:text="scissors"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnPaper"
        app:layout_constraintTop_toBottomOf="@+id/playerChoice"
        app:layout_constraintVertical_bias="0.501" />


</androidx.constraintlayout.widget.ConstraintLayout>